<h2 class='header-title'><%= @recipe.name %></h2>
<div class="recipe-details">
<% if can?(:update, @recipe) || @recipe.public %>
  
    <div>
      <p><strong>Preparation time: <%= @recipe.preparation_time %> <% if @recipe.preparation_time > 1 %>hours<% else %>hour<% end %></strong></p>
    </div>

<div class="toggle-container">
  <% if can?(:update, @recipe) %>
    <%= form_with(model: @recipe, url: toggle_recipe_path(@recipe), method: :patch) do |form| %>
      <div class="toggle">
        <input type="checkbox" id="toggle-checkbox" <%= @recipe.public ? '' : 'checked' %> hidden>
        <label for="toggle-checkbox" class="slider"></label>
      </div>
      <span class="toggle-caption">
        <span class="public-caption">Public</span>
        
      </span>
    <% end %>
  <% end %>
</div>











 

