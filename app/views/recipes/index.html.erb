
<h1>Recipes List</h1>

<p><%= link_to 'Add Recipe', new_recipe_path %></p>

<table>
  <tbody>
    <% @recipes.each do |recipe| %>
      <tr class="tr1">
        <td>Recipe<%= recipe.id %></td>
        <td><%= recipe.description %></td>
        <td>
          <%= button_to 'REMOVE', recipe_path(recipe), method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
